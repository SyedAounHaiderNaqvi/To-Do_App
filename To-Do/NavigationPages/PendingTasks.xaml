            <controls:InfoBar CornerRadius="{ThemeResource ControlCornerRadius}" IsClosable="False" IsOpen="True" Background="{ThemeResource ExpanderHeaderBackground}" Severity="Informational" Message="Marked task as complete." x:Name="confirmDoneNotif">

            </controls:InfoBar>

        </Grid>-->
