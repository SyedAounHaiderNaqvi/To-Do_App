                                                </Button.Content>
                                            </Button>
                                            <CheckBox Margin="0,-2,0,0" Click="StarChecked" Style="{ThemeResource StarCheck}" IsChecked="{x:Bind IsStarred}" PointerCaptureLost="CheckBox_PointerCaptureLost" ToolTipService.ToolTip="Mark as important" DataContext="{Binding ElementName=UserControl}"/>
                                            <Button DataContext="{Binding ElementName=UserControl}" Click="OpenSplitView" x:Name="moreOptBtn" Style="{ThemeResource EllipsisButton}" BorderThickness="0" Background="Transparent" Height="46" Width="42" CornerRadius="20" ToolTipService.ToolTip="More options">
                                                <Button.Content>
                                                    <FontIcon FontSize="14" Glyph="&#xE712;"/>
                                                </Button.Content>
                                                 
                                            </Button>
                                        </StackPanel>
                                        <Rectangle Margin="-20,0,-70,-1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Fill="{ThemeResource SystemChromeAltHighColor}" IsHitTestVisible="False" Grid.ColumnSpan="2" Height="1"/>
                                    </Grid>
                                </DataTemplate>
                            </controls:Expander.HeaderTemplate>
                            <controls:Expander.Content>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <ListView Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" ItemsSource="{x:Bind SubTasks}" SelectionMode="None" BorderThickness="0" MaxHeight="350">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:TODOTask">
                                                <UserControl x:Name="control" PointerEntered="SubTaskPointerEntered" PointerExited="SubTaskPointerExited">
                                                    <Border Margin="20,0,0,0" Padding="10" CornerRadius="{ThemeResource ListViewItemCornerRadius}" Background="{ThemeResource TextControlBackground}" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="10"/>
                                                                <ColumnDefinition Width="50"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="50"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Background="{ThemeResource SystemAccentColor}" CornerRadius="{ThemeResource ListViewItemCornerRadius}" x:Name="backplate" Margin="-10,-10,-10,-10" Opacity="0" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                                <Grid.OpacityTransition>
                                                                    <ScalarTransition Duration="0:0:0.2"/>
                                                                </Grid.OpacityTransition>
                                                            </Grid>
                                                            <Grid Opacity="0" Margin="-10,-10,-10,-10" x:Name="rect" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                                <Border BorderBrush="{ThemeResource SystemAccentColor}" CornerRadius="{ThemeResource ListViewItemCornerRadius}" BorderThickness="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                </Border>
                                                                <Grid.OpacityTransition>
                                                                    <ScalarTransition Duration="0:0:0.2"/>
                                                                </Grid.OpacityTransition>
                                                            </Grid>
                                                            <CheckBox PointerCaptureLost="SubTaskPointerCaptureLost" DataContext="{Binding ElementName=control}" Checked="StepCheckToggled" Margin="5,0,0,0" Style="{ThemeResource CheckBoxStyle1}" ToolTipService.ToolTip="Mark as complete" Grid.Column="1">

                                                            </CheckBox>
                                                            <TextBlock Style="{ThemeResource BaseTextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="2" Text="{x:Bind Description}"/>
                                                            <Button Opacity="0" Translation="50,0,0" PointerCaptureLost="BTN_SubTaskPointerCaptureLost" Click="DeleteSubTask" DataContext="{Binding ElementName=control}" Grid.Column="3" Width="42" Height="46" x:Name="delsubtask" Style="{ThemeResource EllipsisButton}" BorderThickness="0" Background="Transparent" CornerRadius="20" ToolTipService.ToolTip="Delete step">
                                                                <Button.Content>
                                                                    <FontIcon FontSize="14" Glyph="&#xE74D;"/>
                                                                </Button.Content>
                                                                <Button.TranslationTransition>
                                                                    <Vector3Transition Duration="0:0:0.2"/>
                                                                </Button.TranslationTransition>
                                                                <Button.OpacityTransition>
                                                                    <ScalarTransition Duration="0:0:0.2"/>
                                                                </Button.OpacityTransition>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </UserControl>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ItemContainerStyle>
                                            <Style BasedOn="{StaticResource RoundedListViewItem}" TargetType="ListViewItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Margin" Value="0,3,16,0"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </Grid>
                            </controls:Expander.Content>
                        </controls:Expander>
                    </UserControl>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource RoundedListViewItem}" TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,3,16,0"/>
                    <Setter Property="Padding" Value="-5,-5,-1,-5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <StackPanel Translation="0,0,32" Shadow="{StaticResource SharedShadow}" Margin="5,5,5,0" Padding="30,40,30,30" Background="{ThemeResource ExpanderHeaderBackground}" CornerRadius="{ThemeResource OverlayCornerRadius}" x:Name="AllDone" Visibility="Visible" Orientation="Vertical" Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Width="70" Height="70" Stretch="Uniform" Source="/Images/yay.png" />
            </Grid>
            <TextBlock HorizontalAlignment="Center" FontSize="22" Opacity="1" Style="{ThemeResource SubtitleTextBlockStyle}" Text="Yay, no more tasks!"/>
            <TextBlock HorizontalAlignment="Center" HorizontalTextAlignment="Center" MaxWidth="250" FontSize="16" Opacity="0.8" Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="Wrap" Text="Create a new task so that you won't forget it later on."/>
        </StackPanel>
        <Grid Padding="35,25,35,15" Background="Transparent" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,-84,0,10">
            <Border Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" CornerRadius="{ThemeResource ControlCornerRadius}" Background="{ThemeResource ExpanderHeaderBackground}" BorderThickness="0">
                <TextBlock x:Name="pageTitle" Padding="8,4,8,4" HorizontalTextAlignment="Center" HorizontalAlignment="Center" Style="{ThemeResource SubtitleTextBlockStyle}" FontSize="18" Text="{x:Bind _name, Mode=OneWay}"/>
            </Border>
            <Grid HorizontalAlignment="Right" Margin="0,5,0,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <FontIcon VerticalAlignment="Center" Grid.Column="0" Glyph="&#xE8CB;" ToolTipService.ToolTip="Sort by"/>
                <Border Background="{ThemeResource ExpanderHeaderBackground}" CornerRadius="{ThemeResource ControlCornerRadius}" Grid.Column="2" VerticalAlignment="Center">
                    <controls:DropDownButton ToolTipService.ToolTip="Sort by" x:Name="SortingDropDown" Content="Date Created" >
                        <controls:DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <controls:RadioMenuFlyoutItem x:Name="opt1" GroupName="t" IsChecked="True" Click="SortingOptionClicked" Text="Date Created"/>
                                <controls:RadioMenuFlyoutItem x:Name="opt2" GroupName="t" Click="SortingOptionClicked" Text="Text"/>
                                <controls:RadioMenuFlyoutItem x:Name="opt3" GroupName="t" Click="SortingOptionClicked" Text="Importance"/>
                            </MenuFlyout>
                        </controls:DropDownButton.Flyout>

                    </controls:DropDownButton>
                </Border>

            </Grid>
        </Grid>


        <TextBox Translation="0,0,32" Shadow="{StaticResource SharedShadow}" BorderThickness="0" Style="{ThemeResource TextBoxStyle1}" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="50,15,10,10" Margin="35,5,35,20" GotFocus="NewTaskBox_GotFocus" LostFocus="NewTaskBox_LostFocus" KeyDown="NewTaskBox_KeyDown" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" VerticalContentAlignment="Center" PlaceholderText="Add a new task" Height="50"  x:Name="NewTaskBox"/>
        <FontIcon IsHitTestVisible="False" x:Name="boxIcon" Width="20" Height="20" Margin="55,0,0,15" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Glyph="&#xE710;">
            <FontIcon.OpacityTransition>
                <ScalarTransition/>
            </FontIcon.OpacityTransition>
        </FontIcon>
        <SplitView x:Name="moreOptionsSplitView" Margin="0,-120,-1,-20" Grid.RowSpan="2" IsPaneOpen="False" DisplayMode="Overlay" PanePlacement="Right">
            <SplitView.Pane>
                <Grid Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="15" FontSize="20" FontWeight="SemiBold" Style="{ThemeResource SubheaderTextBlockStyle}" Text="More Options"/>
                    <StackPanel Grid.Row="1" Spacing="10" Orientation="Vertical">
                        <Border Margin="8,0,8,0" CornerRadius="{ThemeResource ControlCornerRadius}" Background="{ThemeResource ExpanderHeaderBackground}" BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}" BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}" HorizontalAlignment="Stretch" Height="80">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Grid.Row="0" Text="Edit task" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox TextChanged="EditBoxTextChanged" x:Name="edittasktextbox" PlaceholderText="Type task name" Margin="8" Grid.Row="1">
                                    
                                </TextBox>
                            </Grid>
                        </Border>
                        <!--<Border Margin="8,0,8,0" CornerRadius="{ThemeResource ControlCornerRadius}" Background="{ThemeResource ExpanderHeaderBackground}" BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}" BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}" HorizontalAlignment="Stretch" Height="80">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Grid.Row="0" Text="Add due date" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <CalendarDatePicker FirstDayOfWeek="Monday" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" PlaceholderText="Pick a date"/>
                            </Grid>
                        </Border>-->
                    </StackPanel>
                    
                    <Grid Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Button Height="40" Width="40" Margin="10,0,5,10" Click="CloseSplitView" ToolTipService.ToolTip="Close Pane" CornerRadius="{ThemeResource ControlCornerRadius}" Grid.Column="0">
                            <FontIcon FontSize="17" Glyph="&#xE76C;"/>
                        </Button>
                        <Button Click="SaveChanges" Margin="0,0,0,10" IsEnabled="False" Style="{ThemeResource AccentButtonStyle}" Content="Save Changes" VerticalAlignment="Center" Height="40" Width="150" HorizontalAlignment="Center" CornerRadius="{ThemeResource ControlCornerRadius}" Grid.Column="1" x:Name="confirmchangesBTN" Grid.Row="2">

                        </Button>
                        <!--<TextBlock Text="Created 31 months ago" Foreground="{ThemeResource SystemBaseMediumHighColor}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>-->
                        <Button Height="40" Width="40" Margin="5,0,10,10" HorizontalAlignment="Right" Click="DeleteTask" ToolTipService.ToolTip="Delete task" CornerRadius="{ThemeResource ControlCornerRadius}" Grid.Column="2">
                            <FontIcon Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}" FontSize="17" Glyph="&#xE74D;"/>
                        </Button>
                    </Grid>
                </Grid>
            </SplitView.Pane>
        </SplitView>
